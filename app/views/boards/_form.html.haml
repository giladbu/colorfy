= form_for(@board) do |f|
  - if @board.errors.any?
    %div#error_explanation
      %h2
        = pluralize(@board.errors.count, "error")
        prohibited this board from being saved:

      %ul
        - @board.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :size, "Level"
    %br.clear
    = f.number_field :size, :size => 4, :value => 4
    
  .actions
    = f.submit
